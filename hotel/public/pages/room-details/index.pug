extends ../../../src/layout/layout.pug 

block variables 
  - let title = "Room details"

block append includes
  include ../../../src/blocks/booking-card/booking-card.pug
  include ../../../src/blocks/convenience/convenience.pug
  include ../../../src/blocks/comment/comment.pug 
  include ../../../src/blocks/bullet-list/bullet-list.pug
  include ../../../src/blocks/donut/donut.pug

block scripts 
  script(defer src="../../../src/room-details.js")

block content
  //- фотографии номера
  .preview
    .preview__left 
      img(src="./room-details-bg3-min.jpg", alt="")
    .preview__right 
      .preview__right-top
        img(src="./room-details-bg1-min.jpg", alt="")
      .preview__right-bottom 
        img(src="./room-details-bg2-min.jpg", alt="")

  .container 
    .container__left 
      .container__top
        //- удобства  
        .container__conveniences
          h2.container__title Сведения о номере
          +convenience({
            url: "../../../src/blocks/convenience/insert_emoticon-min.svg",
            title: "Комфорт",
            text: "Шумопоглащающие стены"
            }) 
          +convenience({
            url: "../../../src/blocks/convenience/location_city-min.svg",
            title: "Удобство",
            text: "Окно в каждой из спален"
            }) 
          +convenience({
            url: "../../../src/blocks/convenience/whatshot-min.svg",
            title: "Уют",
            text: "Номер оснащен камином",
            theme: "without-border"
            }) 

        //- круговая диаграмма
        .container__impressions
          h2.container__title Впечатления от номера    
          +donut({
            variables:[{
              value:25, 
              color: ["#BC9CFF", "#8BA4F9"]
            }, {
              value: 25, 
              color: ["#6FCF97", "#66D2EA"]
            }, {
              value: 50, 
              color: ["#FFE39C", "#FFBA9C"]
            }],
            number: 260,
            text: "голосов",
            captions: [
              "Великолепно",
              "Хорошо",
              "Удовлетворительно",
              "Разочарован"
            ]
          })

      //- комментарии
      .container__comments 
        h2.container__title Отзывы посетителей номера
        ul.container__list 
          li.container__comment
            +comment({
              url: "../../../src/blocks/author/ava.jpg",
              name: "Мурад Сарафанов",
              additionalInfo: "5 дней назад",
              number: 12,
              checked: true,
              text: "Великолепный матрас на кровати в основной спальне!\
              А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. \
              Выкрикивал комплименты повару — никто не жаловался из соседей."
            })

          li.container__comment
            +comment({
              url: "../../../src/blocks/author/ava2.jpg",
              name: "Патрисия Стёклышкова",
              additionalInfo: "5 дней назад",
              number: 12,
              checked: false,
              text: "Обслуживание на высоте! Всё аккуратно, чисто. \
              Завтраки в номер советую заказать, каждый день новое \
              блюдо и десерт как комплимент"
            }) 

      .container__bottom 
        //- правила проживания
        .container__rules
          h2.container__title Правила
          +bullet-list({
            items: [
              "Нельзя с питомцами",
              "Без вечеринок и мероприятий",
              "Время прибытия — после 13:00, а выезд до 12:00"
            ]
          })
        
        //- правила отмены
        .container__cancellation
          h2.container__title  Отмена
          p.container__text. 
            Бесплатная отмена в течение 48 ч. После этого при отмене не позднее
            чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      
    //- карточка бронирования номера
    .container__right
      +booking-card({
        price: "9 990",
        room: "888",
        serviceClass: "Люкс",
        dates: [ "19.08.2019", "23.08.2019" ],
        guests: { adults: "2", children: "1", babies: "0", inputValue: "3 гостя" },
        discount: "2 179",
        serviceCharge: "0",
        additionalServiceCharge: "300"
      }) 
      