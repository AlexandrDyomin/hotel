extends ../src/layout/page.pug

block variables 
  - let title = "Room details"

block append includes
  include ../src/blocks/booking-card/booking-card.pug
  include ../src/blocks/convenience/convenience.pug
  include ../src/blocks/comment/comment.pug 
  include ../src/blocks/bullet-list/bullet-list.pug
  include ../src/blocks/donut/donut.pug
  include ../src/blocks/preview/preview.pug

block scripts 
  script(defer src="../src/room-details.js" type="module")

block content
  //- фотографии номера
  +preview({
    urls: [
      "../src/blocks/preview/room-details-bg3-min.jpg",
      "../src/blocks/preview/room-details-bg1-min.jpg",
      "../src/blocks/preview/room-details-bg2-min.jpg"
    ]
  })

  .container
    .details 
      .details__left 
        .details__top
          //- удобства  
          .details__conveniences
            h2.details__title Сведения о номере
            +convenience({
              url: "../src/blocks/convenience/insert_emoticon-min.svg",
              title: "Комфорт",
              text: "Шумопоглащающие стены"
              }) 
            +convenience({
              url: "../src/blocks/convenience/location_city-min.svg",
              title: "Удобство",
              text: "Окно в каждой из спален"
              }) 
            +convenience({
              url: "../src/blocks/convenience/whatshot-min.svg",
              title: "Уют",
              text: "Номер оснащен камином",
              theme: "without-border"
              }) 

          //- круговая диаграмма
          .details__impressions
            h2.details__title Впечатления от номера    
            +donut({
              variables:[{
                value:25, 
                color: ["#BC9CFF", "#8BA4F9"]
              }, {
                value: 25, 
                color: ["#6FCF97", "#66D2EA"]
              }, {
                value: 50, 
                color: ["#FFE39C", "#FFBA9C"]
              }],
              number: 260,
              text: "голосов",
              captions: [
                "Великолепно",
                "Хорошо",
                "Удовлетворительно",
                "Разочарован"
              ]
            })

        //- комментарии
        .details__comments 
          h2.details__title Отзывы посетителей номера
          ul.details__list 
            li.details__comment
              +comment({
                url: "../src/blocks/author/ava.jpg",
                name: "Мурад Сарафанов",
                additionalInfo: "5 дней назад",
                number: 12,
                checked: true,
                text: "Великолепный матрас на кровати в основной спальне!\
                А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. \
                Выкрикивал комплименты повару — никто не жаловался из соседей."
              })

            li.details__comment
              +comment({
                url: "../src/blocks/author/ava2.jpg",
                name: "Патрисия Стёклышкова",
                additionalInfo: "5 дней назад",
                number: 12,
                checked: false,
                text: "Обслуживание на высоте! Всё аккуратно, чисто. \
                Завтраки в номер советую заказать, каждый день новое \
                блюдо и десерт как комплимент"
              }) 

        .details__bottom 
          //- правила проживания
          .details__rules
            h2.details__title Правила
            +bullet-list({
              items: [
                "Нельзя с питомцами",
                "Без вечеринок и мероприятий",
                "Время прибытия — после 13:00, а выезд до 12:00"
              ]
            })
          
          //- правила отмены
          .details__cancellation
            h2.details__title  Отмена
            p.details__text. 
              Бесплатная отмена в течение 48 ч. После этого при отмене не позднее
              чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        
      //- карточка бронирования номера
      .details__right
        +booking-card({ 
          price: "9 990",
          room: "888",
          serviceClass: "Люкс",
          dates: [ "19.08.2019", "23.08.2019" ],
          guests: { adults: "2", children: "1", babies: "0", inputValue: "3 гостя" },
          discount: "2 179",
          serviceCharge: "0",
          additionalServiceCharge: "300"
        })       