block variables

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    <link rel="apple-touch-icon" sizes="180x180" href="favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicons/favicon-16x16.png">
    <link rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="preload" href="../src/layout/bg-1-min.jpg" as="image">
    <link rel="preload" href="../src/layout/bg-2-min.jpg" as="image">
    <link rel="preload" href="../src/layout/bg-3-min.jpg" as="image">
    <link rel="preload" href="../src/layout/bg-4-min.jpg" as="image">
    <meta name="description" content="Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды». Лучшие номера для вашей работы, отдыха и просто вдохновения">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    block includes
      include ../blocks/header/header.pug
      include ../blocks/footer/footer.pug

    block scripts

    title=title
  body
    .page
      block header
        +header()

      main.page__content(class=(theme)? "page__content_" + theme : "")
        block content
        
      block footer
        +footer