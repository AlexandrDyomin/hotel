mixin button(options)
  a.button(
    href=(options.url) ? options.url : "javascript:void(0)"
    area-label=`страница № ${ options.value }`
    tabindex="-1"
  )
    input.button-item(
      type=(options.type) ? options.type : "button"
      name=options.name 
      value=options.value || " "
      disabled=options.disabled
      class=options.modifiers
    )
    
