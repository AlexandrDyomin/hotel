include ../logo/logo.pug 
include ../subscription-text-field/subscription-text-field.pug

mixin footer({theme})
  if theme === "min"
    footer.footer.footer_min   
      +logo 
      p.footer__text Copyright © 2018 Toxin отель. Все права защищены.
      .footer__socials
        img(src="../src/blocks/footer/t-min.svg", alt="")
        img(src="../src/blocks/footer/f-min.svg", alt="")
        img(src="../src/blocks/footer/i-min.svg", alt="")     
  else
    footer.footer 
      .footer__main
        .footer__column
          .footer__logo 
            +logo 
          p.footer__text.
            Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        
        .footer__column
          h3.footer__title навигация
          ul.footer__list
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") О нас
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Новости
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Служба поддержки
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Услуги
        
        .footer__column
          h3.footer__title о нас
          ul.footer__list
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") О сервисе
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Наша команда
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Вакансии
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Инвесторы

        .footer__column
          h3.footer__title Служба поддержки
          ul.footer__list
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Соглашения
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Сообщества
            li.footer__list-item
              a.footer__link(href="javascript:void(0)") Связь с нами
        
        .footer__column
          form.footer__subscription
            h3.footer__title Подписка
            p.footer__text Получайте специальные предложения и новости сервиса
            +subscription-text-field({ 
              type: "email", 
              name: "email", 
              placeholder: "Email" 
            })

      .footer__bottom
        p.footer__text Copyright © 2018 Toxin отель. Все права защищены.
        .footer__socials
          img(src="../src/blocks/footer/t-min.svg", alt="")
          img(src="../src/blocks/footer/f-min.svg", alt="")
          img(src="../src/blocks/footer/i-min.svg", alt="")