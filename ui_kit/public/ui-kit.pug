    title UI Kit
  body
    header.hd
      .hd__container
        <svg width="48" height="48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M23.999 32.471a1.416 1.416 0 0 1-1.412-1.412c0-5.435-4.447-9.882-9.882-9.882a1.416 1.416 0 0 1-1.412-1.412c0-.776.635-1.412 1.412-1.412 7.023 0 12.706 5.683 12.706 12.706 0 .777-.636 1.412-1.412 1.412zM36.707 19.765c0 .777-.636 1.412-1.412 1.412a9.851 9.851 0 0 0-8.118 4.27 14.448 14.448 0 0 0-1.411-2.752 12.588 12.588 0 0 1 9.529-4.341c.776 0 1.412.635 1.412 1.411z" fill="#1F2041" fill-opacity=".25"/><path d="M24 48C10.765 48 0 37.235 0 24S10.765 0 24 0s24 10.765 24 24-10.765 24-24 24zm0-45.176C12.318 2.824 2.824 12.318 2.824 24c0 11.682 9.494 21.176 21.176 21.176 11.682 0 21.176-9.494 21.176-21.176 0-11.682-9.494-21.176-21.176-21.176z" fill="#1F2041" fill-opacity=".25"/></svg>
    main.main
      .container
        .container__colors-types
          section.container__colors
            - let data = [{
            -   code: "#1F2041", 
            -   name: "Dark Shade 100%" 
            - }, {
            -   code: "#1F2041", 
            -   name: "Dark Shade 75%", 
            -   modifiers: "color-card__square_dark-shade_75" 
            - }, {
            -   code: "#1F2041", 
            -   name: "Dark Shade 50%",
            -   modifiers: "color-card__square_dark-shade_50"
            - }, {
            -   code: "#1F2041", 
            -   name: "Dark Shade 25%", 
            -   modifiers: "color-card__square_dark-shade_25"
            - }, {
            -   code: "#1F2041", 
            -   name: "Dark Shade 5%", 
            -   modifiers: "color-card__square_dark-shade_5" 
            - }, { 
            -   code: "#1F2041", 
            -   name: "Purple", 
            -   modifiers: "color-card__square_purple" 
            - }, { 
            -   code: "#1F2041", 
            -   name: "Green", 
            -   modifiers: "color-card__square_green" 
            - }]
                 
            each item in data
              +color-card(item) 

          section.container__fonts
            +font({ 
              allocation: "h1", 
              example: "This one is the sub-section or widget title", 
              font_modifiers: [ "font_text-size_xl", "font__example_bold" ],
              font__example_modifiers: "font__example_container-size_xl"
            })
            +font({ 
              allocation: "h2", 
              example: "Next one is the item title inside widgets", 
              font_modifiers: [ "font_text-size_lg", "font__example_bold" ],
              font__example_modifiers: "font__example_container-size_lg"
            })
            +font({ 
              allocation: "h3", 
              example: "This is a label or CTA text", 
              font_modifiers: [ "font_text-size_md", "font__example_bold" ],
              font__example_modifiers: "font__example_container-size_sm"
            })
            +font({ 
              allocation: "body", 
              example: "This is the body text which is used for most of the design, like paragraphs, lists, etc.", 
              font_modifiers: "font_text-size_sm",
              font__allocation_modifiers: "font__allocation_uppercase_disabled",
              font__example_modifiers: "font__example_dark-shade_75" ,
              font__example_modifiers: "font__example_container-size_md"
            })

        .container__form-elements
          section.container__main
            .container__left
              label.label 
                span.label__text text field
                +text-field({ 
                  type: "email", 
                  name: "email", 
                  placeholder: "Email"
                })

              label.label 
                span.label__text Masked text field
                +text-field({
                  type: "text", 
                  name: "date-of-birth", 
                  placeholder: "ДД.ММ.ГГГГ",
                  mask: "date"
                })

              label.label 
                span.label__text Dropdown
                +dropdown( { type: "guests"} )

             
              +date-dropdown( { id: "date-dropdown", label1: "date dropdown", label2: "date dropdown" } )

              label.label
                span.label__text filter date dropdown
                +filter-date-dropdown( { id: "filter-date-dropdown" } )

              label.label 
                span.label__text text field
                +subscription-text-field({ 
                  type: "email", 
                  name: "email", 
                  placeholder: "Email" 
                })

              label.label
                span.label__text Dropdown
                +dropdown({ 
                  type: "rooms", 
                  amenities: { bedrooms: "2", rooms: "2", inputValue: "2 комнаты, 2 кровати" } 
                })

              +expandable-checkbox-list({
                title: "expandable checkbox list",
                checkboxButtons: [ {
                    name: "breakfast",
                    value: 1,
                    text: "Завтрак",
                    dataParent: "checkboxList"
                  }, {
                    name: "desk",
                    value: 1,
                    text: "Письменный стол",
                    dataParent: "checkboxList"
                  }, {
                    name: "feeding chair",
                    value: 1,
                    text: "Стул для кормления",
                    dataParent: "checkboxList"
                  }, {
                    name: "television",
                    value: 1,
                    text: "Кроватка",
                    dataParent: "checkboxList"
                  },{
                    name: "television",
                    value: 1,
                    text: "Телевизор",
                    dataParent: "checkboxList"
                  }, {
                    name: "shampoo",
                    value: 1,
                    text: "Шампунь",
                    dataParent: "checkboxList"
                  }
                ]
              })

            .container__middle
              label.label
                span.label__text Checkbox-Buttons
                +checkbox-button({
                    text: "Можно курить"
                })
                +checkbox-button({
                  text: "Можно с питомцами",
                  checked: true
                })
                +checkbox-button({
                    text: "Можно пригласить гостей (до 10 человек)",
                    checked: true
                })

              label.label
                span.label__text Radio Buttons 
                +radio-buttons({
                  items: [
                    {
                      name: "sex",
                      value: "male",
                      label: "Мужчина"                      
                    },{
                      name: "sex",
                      value: "female",
                      label: "Женщина",
                      checked: true
                    }
                  ]
                })

              label.label
                span.label__text Toggle
                +toggle({
                  toggleButton: { name: "offer", on: true },
                  text: "Получать спецпредложения",
                })

              label.label
                span.label__text Likes
                +likes({
                  name: 'like',
                  number: 12,
                  checked: true
                })

              label.label
                span.label__text Rate Button
                +rate-button({
                  name: "rating",
                  scale: 5,
                  rating: 4
                })

              label.label
                span.label__text Rich Checkbox Buttons
                +checkbox-button({
                  title: "Широкий коридор",
                  text: "Ширина коридоров в номере не менее 91 см."
                })
                +checkbox-button({
                  title: "Помощник для инвалидов",
                  text: "На 1 этаже вас встретит специалист  и проводит до номера."
                })

            .container__right
              label.label
                span.label__text Range slider
                +range-slider

              div.label
                span.label__text Buttons
                .label__group-1
                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me"
                  })
                  
                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me",
                    disabled: true
                  })

                .label__group-2
                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me",
                    modifiers: ["button-item_with-border"]
                  })

                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me",
                    modifiers: ["button-item_with-border"],
                    disabled: true
                  })

                .label__group-3
                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me",
                    modifiers: ["button-item_minimalistic"]
                  })

                  +button({
                    type: "button",
                    name: "button",
                    value: "Click me",
                    modifiers: ["button-item_minimalistic"],
                    disabled: true
                  })

                .label__group-4
                  +button({
                    type: "button",
                    name: "button",
                    value: "Перейти к оплате",
                    modifiers: ["button-item_large"]
                  })

              div.label
                span.label__text Pagination
                +pagination({
                  numberOfPages: 15,
                  currentPage: 1,
                  info: "1 – 12 из 100+ вариантов аренды"
                })

              label.label
                span.label__text Bullet List 
                +bullet-list({
                  items: [
                    "Нельзя с питомцами",
                    "Без вечеринок и мероприятий",
                    "Время прибытия — после 13:00, а выезд до 12:00"
                  ]
                })
 
        section.container__bottom  
          .container__left     
            label.label
              span.label__text convenience
              +convenience({
                url: "../src/blocks/convenience/insert_emoticon-min.svg",
                title: "Комфорт",
                text: "Шумопоглощающие стены"          
              })

              +convenience({
                url: "../src/blocks/convenience/location_city-min.svg",
                title: "Удобство",
                text: "Окно в каждой из спален"          
              })
              
          .container__right
            +comment({
              url: "../src/blocks/author/ava.jpg",
              name: "Мурад Сарафанов",
              additionalInfo: "5 дней назад",
              name: 'like',
              number: 12,
              checked: false,
              text: "Великолепный матрас на кровати в основной спальне!\
              А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. \
              Выкрикивал комплименты повару — никто не жаловался из соседей."
            })

        .container__main
          .container__left
            .container__item
              +search-card
            .container__item
              +air-datepicker
            
          .container__middle 
            .container__item
              +entry-card
            .container__item
              +booking-card({
                price: "9 990",
                room: "888",
                serviceClass: "Люкс",
                dates: [ "19.08.2019", "23.08.2019" ],
                guests: { adults: "2", children: "1", babies: "0", inputValue: "3 гостя" },
                discount: "2 179",
                serviceCharge: "0",
                additionalServiceCharge: "300"
              })              
            
          .container__right
            .container__item
              +registration-card
            .container__item
              +album({
                id: "carousel", 
                urls: [ 
                  "../src/blocks/album/image-min.jpg", 
                  "../src/blocks/album/image-min.jpg", 
                  "../src/blocks/album/image-min.jpg",
                  "../src/blocks/album/image-min.jpg" 
                ], 
                numberOfReviews: "145", 
                price: "9 990", 
                room: "888", 
                serviceClass: "Люкс", 
                rating: 5
              })
            .container__item
              +album({
                id: "carousel1", 
                urls: [ 
                  "../src/blocks/album/image (1)-min.jpg", 
                  "../src/blocks/album/image (1)-min.jpg", 
                  "../src/blocks/album/image (1)-min.jpg",
                  "../src/blocks/album/image (1)-min.jpg" 
                ], 
                numberOfReviews: "65", 
                price: "9 990", 
                room: "840", 
                rating: 4
              })

        .container__headers-footers
          .container__headers 
            .container__item
              +header({})
            .container__item
              +header({ 
                user: "Юлий Цезарь",
                isAuthorizationPassed: true
              })
          .container__footers
            .container__item 
              +footer({})
            .container__item 
              +footer({theme: "min"})